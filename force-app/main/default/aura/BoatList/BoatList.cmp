<aura:component implements="flexipage:availableForAllPageTypes" access="global" controller="FriendShipsController">

<!-- Afficher la liste de tous les bateaux -->
<aura:attribute name="boats" type="Boat__c[]" description="The list of boats"/>

<!-- Handler on init -->
<aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <!-- Iteration sur les bateaux -->
    <aura:iteration items="{!v.boats}" var="bateau">

      <!-- Bateau -->
      <div class="slds-card slds-p-around-small">
        <div>{!bateau.Name}</div> 
        <div>{!bateau.Id}</div>
      </div>
      <!-- Iteration sur les maintenances du bateaux -->
      <ul>
      <aura:iteration items="{!bateau.Maintenances__r}" var="toto">
        <li>
        <span>Maintenance {!toto.Name}</span>
        </li>
      </aura:iteration>
      </ul>

    </aura:iteration>
</aura:component>